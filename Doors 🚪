local ZypherLibrary = loadstring(game:HttpGet("https://github.com/GhostDuckyy/UI-Libraries/raw/main/Zypher%2Fsource.lua"))()

local Window = ZypherLibrary:CreateWindow("Yanzz Hub - DoorsðŸšª", UDim2.new(0.3, 0, 0.3, 0))
Window:MakeScrollable()

local LocalPlayer = game.Players.LocalPlayer

local MainTab = Window:CreateTab("Main")
local AutoOpenDoorsEnabled = false
local ESPEnabled = false

local AutoOpenDoorsToggle = MainTab:CreateToggle("Auto Open Doors", false, function(value)
    AutoOpenDoorsEnabled = value
    if AutoOpenDoorsEnabled then
        spawn(autoOpenDoors)
    end
end)

local ESPToggle = MainTab:CreateToggle("ESP", false, function(value)
    ESPEnabled = value
    if ESPEnabled then
        spawn(ESP)
    end 
end)

local SpeedSlider = MainTab:CreateSlider("Speed", 0, 200, 50, function(value)
    SpeedValue = value
end)

local function autoOpenDoors()
    while AutoOpenDoorsEnabled do
        local character = LocalPlayer.Character
        local humanoidRootPart = character and character:FindFirstChild("HumanoidRootPart")
        if humanoidRootPart then
            for _, door in pairs(workspace:GetDescendants()) do
                if door:IsA("BasePart") and door:FindFirstChild("ClickDetector") then
                    local distance = (humanoidRootPart.Position - door.Position).Magnitude
                    if distance <= 20 then
                        fireclickdetector(door.ClickDetector)
                    end
                end
            end
        end
        wait(1)
    end
end

local function createESP(part, color)
    local billboardGui = Instance.new("BillboardGui")
    billboardGui.Name = "ESP"
    billboardGui.Adornee = part
    billboardGui.Size = UDim2.new(0, 100, 0, 100)
    billboardGui.AlwaysOnTop = true
    billboardGui.StudsOffset = Vector3.new(0, 3, 0)

    local frame = Instance.new("Frame", billboardGui)
    frame.Size = UDim2.new(1, 0, 1, 0)
    frame.BackgroundTransparency = 0.5
    frame.BackgroundColor3 = color
    billboardGui.Parent = part
end

local function ESP()
    if ESPEnabled then
        for _, ghost in pairs(workspace:FindFirstChild("Ghosts"):GetChildren()) do
            createESP(ghost:FindFirstChild("Head"), Color3.new(1, 0, 0))
        end

        for _, door in pairs(workspace:FindFirstChild("Doors"):GetChildren()) do
            local doorNumber = door:FindFirstChild("DoorNumber")
            if doorNumber and tonumber(doorNumber.Text) then
                createESP(door, Color3.new(0, 1, 0))
            end
        end
    end
end

local function updateSpeed()
    while true do
        local humanoid = LocalPlayer.Character:FindFirstChild("Humanoid")
        if humanoid then
            humanoid.WalkSpeed = humanoid.Sit and (SpeedValue + 50) or SpeedValue
        end
        wait(1)
    end
end

spawn(updateSpeed)
spawn(autoOpenDoors)
spawn(ESP)